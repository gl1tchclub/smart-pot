generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  Int         @id @default(autoincrement())
  username            String      @unique
  password            String
  plant               Plant[]
}

model Plant {
  id              Int         @id @default(autoincrement())
  name            String      @unique
  threshold       Int
  minTemp         Int
  maxTemp         Int
  updatedAt       DateTime    @updatedAt
  userId          Int
  user            User        @relation(fields: [userId], references: [id])
}